            function changerVoteData(value) {
                if (value) {
                    var jsonValue = JSON.parse(value);
                    console.log(jsonValue);
                     if (jsonValue.type == "addBuff") {
                         convertDataToBuffResult(jsonValue);
                         processBuffResult()
