@page
@model Oryx.VoteApp.Server.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}

<form class="form-horizontal well " action="/account/LoginApi" method="post">
    <fieldset>
        <legend>管理后台</legend>
        <div class="form-group">
            <label for="inputEmail" class="col-lg-2 control-label">用户名</label>
            <div class="col-lg-10">
                <input type="text" class="form-control" name="UserName" placeholder="user name">
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword" class="col-lg-2 control-label">密码</label>
            <div class="col-lg-10">
                <input type="password" class="form-control" name="Passworkd" placeholder="password">
                @*<div class="checkbox">
                        <label>
                            <input type="checkbox"> Checkbox
                        </label>
                    </div>*@
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button type="submit" class="btn btn-primary">登录</button>
            </div>
        </div>
    </fieldset>
</form>