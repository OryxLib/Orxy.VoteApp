        }

    window.onunload = function () {
        for (var i = 0; i < socketlist.length; i++) {
            socketlist[i].close();
        }
    }

        $(document).ready(function () {
            $('#btnReset').click(function () {
                 $.ajax({
                url: '/vote/resetVote',
                dataType: 'json',
                data: {
                   Id:'@Model.VoteInfo.Id'
                },
                type: 'post',
                success: function (res) {
                    if (res.success) {
                        window.location = window.location;
                        alert('success')
                    } else {
                        alert('danger')
                    }
                },
                     error: function () {
                         alert('danger')
                     }
            })
         })
        $('#btnStart').click(function () {
            startVote();
        })
    })
    </script>
}
