                optionPercentDic.type ='addBuff'
                console.log(optionPercentDic);
                $.ajax({
                    url: '/vote/AddBossBuff',
                    dataType: 'text',
                    type:'post',
                    //contentType:'text/plain',
                    data: {
                        voteId:@Model.VoteInfo.Id,
                        option: JSON.stringify( optionPercentDic)
                    },
                    success: function (res) {

                    },
                    error: function (err) {

                     }
                })
            }
        }

        function addBuff(voteOption ) {
            if (confirm('确定投票给他吗?')) {
                $.ajax({
                    url: '/vote/AddBuff',
                    dataType: 'json',
                    data: {
                        voteId:@Model.VoteInfo.Id,
                        option: voteOption
                    },
                    type: 'post',
                    success: function (res) {

                    },
                    error: function (err) {

                     }
                })
            }
        }

        function goPlay() {
            startVote();
        }

        function goPause() {
            if (confirm('确定停止投票吗')) {
                $.ajax({
                    url: '/vote/EndVote',
                    type:'POST',
                    data: {
                        Id:'@Model.VoteInfo.Id'
                    },
                    success: function (res) {
                        if (res.result=='success') {
                            alert('success')
                            window.location = window.location
                        } else {
                            alert('danger')
                        }
                    },
                    error: function () {
                        alert('danger')
                     }
                })
            }
        }

        function startVote() {
            var closeSeconds = prompt('请输入启动时间');
            var closeSecondsInt = parseInt(closeSeconds);
            if (!closeSecondsInt) {
                alert('错误, 请输入数字 !')
                return;
            }
             $.ajax({
                    url: '/vote/StartVote',
                    data: {
                        Id: '@Model.VoteInfo.Id',
                        closeSecondes: closeSecondsInt
                    },
                    dataType: 'json',
                    type: 'post',
                    success: function (res) {
                        if (res.result == "success") {
                            alert('success')
                            window.location = window.location
                        } else {
                            alert('danger')
                        }
                    },
                    error: function () {
                        alert('danger')
                    }
                })
        }

        function alert(type) {
            if (type == 'success') {
                $('#alertContainer').append($('#successAlert').html()).delay(1000).queue(function (next) {
                    $('#alertContainer').empty();
                    next();
                })
            } else {
                $('#alertContainer').append($('#dangerAlert').html()).delay(1000).queue(function (next) {
                    $('#alertContainer').empty();
                    next();
                })
            }
         }
