/* pages/vote/vote.wxss */

.container {
  padding: 0;
  background-repeat: repeat-y;
  background-size: 100% 100%;
  overflow-x: hidden;
}

.loadingContainer {
  display: flex;
}

.loadingContainer image {
  width: 200rpx;
  height: 200rpx;
  margin: 200rpx auto;
}

.options {
  width: 50%;
  overflow: hidden;
  position: relative;
  margin-top: 30rpx;
  display: inline-block;
  text-align: center;
}

.options text {
  display: block;
  max-width: 240rpx;
  /*max-height: 60rpx;*/
  color: #333;
  overflow: hidden;
  text-align: center;
  margin: 0 auto;
}

.option {
  width: 300rpx;
  height: 300rpx;
  margin-left: 20rpx;
}

checkbox {
  /* position: absolute;
  left: 20rpx;
  bottom: 10rpx; */
}

.warp {
  width: 690rpx;
  display: flex;
  flex-wrap: wrap;
  margin: 0 auto;
  /* height: 800rpx; */
  margin-top: 50rpx;
}

.checkeIcon {
  width: 20rpx;
  height: 20rpx;
  background: red;
}

.logo {
  height:450rpx;
  border-bottom: 1rpx solid yellow;
  text-align: center;
  width: 100%;
  background-image: url('https://mioto.milbit.com/voteapp/voteTitle.png');
  background-size: 100% 100%;
  /* margin-top:280rpx; */
}

.logo text.titleContainer {
  /* margin-top: 10rpx; */
  display: flex;
  width: 100%;
  height: 100%;
  color: yellow;
  text-align: left;
  padding-left: 20rpx;
  justify-content: flex-end;
  flex-direction: column;
}

.right {
  float: right;
  width: 130rpx;
  height: 130rpx;
  margin-top: 10rpx;
  text-align: center;
  border-left: 1rpx solid #ececf2;
}

.status {
  font-size: 30rpx;
  color: white;
}

.number {
  font-size: 50rpx;
  color: white;
}

