checkbox-group {
  width: 100%;
}

checkbox .wx-checkbox-input {
  border-radius: 50%;
  width: 60rpx;
  height: 60rpx;
  background-color: white;
  /* background-color: rgba(103, 103, 103, 0.7); */
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  /* border: none;
  background: red;   */
  border: 1px solid rgb(45, 159, 44);
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  position: absolute;
  border-radius: 50%;
  border: none;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 50rpx;
  /* color: #fff; */
  color: rgb(45, 159, 44);
  background: transparent;
  /* background-color: white; */
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

.optionCbx {
  /* position: relative; *//* top: -90rpx; *//* left: 110rpx; */
}

.optTxt {
  color: white !important;
  font-weight: bolder;
  padding: 0 40rpx;
  width: 220rpx;
}

text.lostvote {
  width: 100%;
  display: block;
  margin-top: 20rpx;
  font-size: 1rem;
  color: black;
}

.voteTimeout {
  text-align: center;
  margin-top: 600rpx;
}

.titleContainer text {
  display: block;
}

.titleContainer .default {
  color: white;
}

.warning {
  color: yellow;
  display: inline-block;
}

.btnImg {
  margin-bottom: 150rpx;
  margin-top: 150rpx;
}

.picker {
  color: black;
  background-color: white;
}

.voteTitle {
  height: 500rpx;
}

.picker {
  border: 1px solid #aaa;
  margin: 10rpx;
}
