}

.warp {
  width: 690rpx;
  display: flex;
  flex-wrap: wrap;
  margin: 0 auto;
  height: 800rpx;
}

.checkeIcon {
  width: 20rpx;
  height: 20rpx;
  background: red;
}

.logo {
  /* height: 200rpx; */
  border-bottom: 1rpx solid #ececf2;
  text-align: center;
  width: 100%;
}

.logo text.titleContainer {
  margin-top: 10rpx;
  display: inline-block;
  width: 100%;
  color: white;
  text-align: left;
  padding-left: 20rpx;
}

.right {
  float: right;
  width: 130rpx;
  height: 130rpx;
  margin-top: 10rpx;
  text-align: center;
  border-left: 1rpx solid #ececf2;
}

.status {
  font-size: 30rpx;
  color: white;
}

.number {
  font-size: 50rpx;
  color: white;
}

