.container {
  padding: 0;
}

.loadingContainer {
  display: flex;
}

.loadingContainer image {
  width: 200rpx;
  height: 200rpx;
  margin: 200rpx auto;
}

.options {
  width: 50%;
  overflow: hidden;
  position: relative;
  margin-top: 30rpx;
  display: inline-block;
}

.options text {
  display: inline-block;
  /* width: 50%; */
  max-width: 240rpx;
  max-height: 60rpx;
  position: relative;
  left: 34px;
  color: #333;
  overflow: hidden;
}

.option {
  width: 300rpx;
  height: 225rpx;
  margin-left: 20rpx;
}

checkbox {
  /* position: absolute;
